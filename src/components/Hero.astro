<section class="relative w-full h-screen overflow-hidden">
  <!-- Background Video Container -->
  <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-0 w-full h-full">
      <video 
        autoplay 
        muted 
        loop 
        playsinline
        class="w-full h-full object-cover scale-[1.35]"
      >
        <source src="/Banners/hero_teaser.mov" type="video/mp4">
        <source src="/Banners/hero_teaser.mov" type="video/quicktime">
        Your browser does not support the video tag.
      </video>
    </div>
    <!-- Overlay Gradient to ensure text readability if needed, though we want it gritty -->
    <div class="absolute inset-0 bg-black/20"></div>
  </div>

  <!-- Content Overlay -->
  <div 
    id="hero-content"
    class="relative z-20 w-full h-full flex flex-col items-center justify-center text-center px-4 transition-opacity duration-300"
  >
    <!-- Title Image -->
    <img 
      src="/assests/hellbent_title.png" 
      alt="Hellbent on Boogie Title" 
      class="w-full max-w-4xl mb-12 drop-shadow-[0_0_25px_rgba(245,197,24,0.8)] animate-fade-in"
    />

    <!-- CTA Button -->
    <a 
      href="#watch" 
      class="inline-block bg-brand-yellow hover:bg-yellow-600 text-black font-heading text-2xl px-10 py-5 rounded uppercase tracking-wider transition-all transform hover:scale-105 shadow-[0_0_30px_rgba(245,197,24,0.8)]"
    >
      Watch Now
    </a>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce text-white/70 z-20">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

<script>
  // Scroll fade-out effect
  const heroContent = document.getElementById('hero-content');
  
  if (heroContent) {
    window.addEventListener('scroll', () => {
      const scrollPosition = window.scrollY;
      const windowHeight = window.innerHeight;
      
      // Calculate opacity: 1 at top, 0 when scrolled 50% down the viewport
      const opacity = 1 - (scrollPosition / (windowHeight * 0.5));
      
      // Clamp opacity between 0 and 1
      heroContent.style.opacity = Math.max(0, Math.min(1, opacity)).toString();
      
      // Optional: slight parallax or scale effect could go here
    });
  }
</script>

<style>
  .animate-fade-in {
    animation: fadeIn 2s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }
</style>
